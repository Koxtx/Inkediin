      unread: 0,
      type: "Tatoueurs",
    },
  ]);

  // √âtat pour les recherches
  const [searchTerm, setSearchTerm] = useState("");

  // √âtat pour les conversations individuelles
  const [conversations, setConversations] = useState({
    "JS": {
      contactInfo: {
        initials: "JS",
        name: "Julie S.",
        status: "En ligne"
      },
      messages: [
        {
          content: "Bonjour ! J'ai vu votre flash de rose old school et je suis int√©ress√©e.",
          time: "09:42",
